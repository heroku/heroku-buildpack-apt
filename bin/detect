#!/usr/bin/env bash
# bin/detect <build-dir>

[ "$BUILDPACK_DEBUG" = "true" ] && set -x

APT_FILE_MANIFEST=${APT_FILE_MANIFEST:-Aptfile}

if [ -f "$1/${APT_FILE_MANIFEST}" ]; then
  echo "Apt"
  exit 0
else
  echo "Could not find an 'Aptfile'! Please ensure it exists and is checked into Git." >&2
  exit 1
fi
